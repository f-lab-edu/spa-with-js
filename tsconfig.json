{
  "compilerOptions": {
    "target": "es6", // 컴파일된 javascript 의 ECMAScript 버전
    "module": "es6", // 사용할 모듈 시스템
    "strict": true, // 모든 엄격한 타입 체킹 옵션 활성화
    "moduleResolution": "node", // Node.js 스타일의 모듈 해석
    "esModuleInterop": true, // CommonJS 모듈과 ES 모듈 간의 상호 보장
    "skipLibCheck": true, // 성능 향상을 위해 라이브러리 파일의 타입 검사 생략
    "outDir": "./dist", // 컴파일된 파일이 저장될 디렉터리
    "allowJs": true // 기존의 JS 파일을 허용
  },
  "include": ["src/**/*"], // 컴파일할 파일이 위치한 디렉터리
  "exclude": ["node_modules"] // 컴파일에서 제외할 디렉터리
}
